<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_centerHorizontal="true">

    <ImageView
        android:id="@+id/userProfileImageEdit"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="150dp" />

    <LinearLayout
        android:id="@+id/userProfileLinear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userProfileImageEdit"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/usernameImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_person_24" />

        <TextView
            android:id="@+id/companyHomeLabel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="User Name:"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:background="@null"
            tools:ignore="TouchTargetSizeCheck"
            android:textColor="@color/black"
            android:id="@+id/userNameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Name"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_below="@id/userProfileLinear2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:id="@+id/companyHomeLinear4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/userProfileLinear2"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp" >

        <ImageView
            android:id="@+id/userIDImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_age_24" />

        <TextView
            android:id="@+id/companyHomeLabel4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Age:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:background="@null"
            tools:ignore="TouchTargetSizeCheck"
            android:textColor="@color/black"
            android:id="@+id/userAgeEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="20"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_below="@id/companyHomeLinear4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:id="@+id/companyHomeLinear5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyHomeLinear4"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp" >

        <ImageView
            android:id="@+id/userContactImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_phone_24" />

        <TextView
            android:id="@+id/companyHomeLabel6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Contact Number:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:background="@null"
            tools:ignore="TouchTargetSizeCheck"
            android:textColor="@color/black"
            android:id="@+id/userContactEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="012-3456789"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_below="@id/companyHomeLinear5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:id="@+id/companyHomeLinear6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyHomeLinear5"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp" >

        <ImageView
            android:id="@+id/userEmailImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_email_24" />

        <TextView
            android:id="@+id/userProfLabel7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Email:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:background="@null"
            tools:ignore="TouchTargetSizeCheck"
            android:textColor="@color/black"
            android:id="@+id/userEmailEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="email@example.com"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_below="@id/companyHomeLinear6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:id="@+id/companyHomeLinear7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyHomeLinear6"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp" >

        <ImageView
            android:id="@+id/userLOEImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_school_24" />

        <TextView
            android:id="@+id/userProfLabel8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Level of Education:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerLOEEdit"
            tools:ignore="TouchTargetSizeCheck"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/Level_of_Education"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_below="@id/companyHomeLinear7"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:id="@+id/companyHomeLinear8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyHomeLinear7"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp" >

        <ImageView
            android:id="@+id/userWorkExpImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_work_24" />

        <TextView
            android:id="@+id/userProfLabel9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Working Experience:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:background="@null"
            tools:ignore="TouchTargetSizeCheck"
            android:textColor="@color/black"
            android:id="@+id/userWorkExpEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="2 Years"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_below="@id/companyHomeLinear8"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:id="@+id/companyHomeLinear10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/companyHomeLinear8"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:paddingLeft="10dp" >

        <ImageView
            android:id="@+id/userLanguageImg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_language_24" />

        <TextView
            android:id="@+id/userProfLabel11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Language Skill:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/languageSkillBM"
                    android:textSize="16sp"/>

                <RatingBar
                    android:id="@+id/bmRatingBarEdit"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:paddingTop="3dp"
                    android:paddingLeft="8dp"
                    android:layout_marginLeft="6dp"
                    android:progressTint="@color/defaultColor1"
                    android:rating="1"
                    android:stepSize="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/languageSkillEN"
                    android:textSize="16sp"/>

                <RatingBar
                    android:id="@+id/englishRatingBarEdit"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:paddingTop="3dp"
                    android:paddingLeft="8dp"
                    android:layout_marginLeft="64dp"
                    android:progressTint="@color/defaultColor1"
                    android:rating="2"
                    android:stepSize="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/languageSkillCH"
                    android:textSize="16sp"/>

                <RatingBar
                    android:id="@+id/chineseRatingBarEdit"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:paddingTop="3dp"
                    android:paddingLeft="8dp"
                    android:layout_marginLeft="59dp"
                    android:progressTint="@color/defaultColor1"
                    android:rating="3"
                    android:stepSize="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_below="@id/companyHomeLinear10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:id="@+id/userProfLinear9"
        android:layout_below="@id/companyHomeLinear10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true" >

        <Button
            android:id="@+id/userEditProfButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/defaultColor2"
            android:text="Edit Profile" />

        <Button
            android:id="@+id/userLogoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/defaultColor3"
            android:text="LOGOUT" />

    </LinearLayout>

</RelativeLayout>